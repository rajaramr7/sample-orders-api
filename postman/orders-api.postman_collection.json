	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Pre-request script to automatically fetch token if needed",
					"",
					"const tokenExpiry = pm.environment.get('token_expiry');",
					"const accessToken = pm.environment.get('access_token');",
					"const currentTime = Date.now();",
					"",
					"// Skip token fetch for the token endpoint itself",
					"if (pm.request.url.path && pm.request.url.path.join('/').includes('auth/token')) {",
					"    console.log('Skipping token fetch for auth endpoint');",
					"    return;",
					"}",
					"",
					"// Check if token exists and is not expired (with 60s buffer)",
					"if (accessToken && tokenExpiry && currentTime < (tokenExpiry - 60000)) {",
					"    console.log('Using existing token');",
					"    return;",
					"}",
					"",
					"console.log('Fetching new access token...');",
					"",
					"const baseUrl = pm.environment.get('base_url') || 'http://localhost:8000';",
					"const username = pm.environment.get('username');",
					"const password = pm.environment.get('password');",
					"const clientId = pm.environment.get('client_id');",
					"const clientSecret = pm.environment.get('client_secret');",
					"",
					"let requestBody;",
					"",
					"// Prefer client credentials if available, otherwise use password grant",
					"if (clientId && clientSecret) {",
					"    requestBody = {",
					"        grant_type: 'client_credentials',",
					"        client_id: clientId,",
					"        client_secret: clientSecret",
					"    };",
					"} else if (username && password) {",
					"    requestBody = {",
					"        grant_type: 'password',",
					"        username: username,",
					"        password: password",
					"    };",
					"} else {",
					"    console.warn('No credentials configured. Set username/password or client_id/client_secret in environment.');",
					"    return;",
					"}",
					"",
					"pm.sendRequest({",
					"    url: baseUrl + '/auth/token',",
					"    method: 'POST',",
					"    header: {",
					"        'Content-Type': 'application/json'",
					"    },",
					"    body: {",
					"        mode: 'raw',",
					"        raw: JSON.stringify(requestBody)",
					"    }",
					"}, function (err, response) {",
					"    if (err) {",
					"        console.error('Failed to fetch token:', err);",
					"        return;",
					"    }",
					"    ",
					"    if (response.code === 200) {",
					"        const jsonResponse = response.json();",
					"        pm.environment.set('access_token', jsonResponse.access_token);",
					"        // Set expiry time (expires_in is in seconds)",
					"        const expiryTime = currentTime + (jsonResponse.expires_in * 1000);",
					"        pm.environment.set('token_expiry', expiryTime);",
					"        console.log('Token fetched successfully');",
					"    } else {",
					"        console.error('Token request failed:', response.code, response.text());",
					"    }",
					"});"
				]
			}
		},
		{
